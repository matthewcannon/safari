{
    "name": "Safari",
    "version": "0.0.1",
    "description": "A game for software developers.",
    "license": "UNLICENSED",
    "private": false,
    "author": "mcannon",
    "repository": {
        "type": "git",
        "url": "https://github.com/matthewcannon/safari.git"
    },
    "homepage": "https://github.com/matthewcannon/safari.git#readme",
    "jest": {
        "setupTestFrameworkScriptFile": "jest-enzyme",
        "testEnvironment": "enzyme"
    },
    "dependencies": {
        "@babel/polyfill": "^7.0.0",
        "@babel/runtime": "^7.1.5",
        "deep-freeze": "0.0.1",
        "prop-types": "^15.6.1",
        "react": "^16.3.2",
        "react-dom": "^16.3.2",
        "react-redux": "^5.0.7",
        "redux": "^4.0.0"
    },
    "devDependencies": {
        "@babel/cli": "7.1.2",
        "@babel/core": "^7.1.6",
        "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
        "@babel/plugin-transform-modules-commonjs": "^7.1.0",
        "@babel/plugin-transform-runtime": "^7.1.0",
        "@babel/polyfill": "^7.0.0",
        "@babel/preset-env": "^7.1.6",
        "@babel/preset-react": "^7.0.0",
        "@babel/register": "^7.0.0",
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "10.0.1",
        "babel-jest": "^23.6.0",
        "babel-loader": "^8.0.4",
        "enzyme": "^3.8.0",
        "enzyme-adapter-react-16": "^1.7.1",
        "eslint": "^4.19.1",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-prettier": "^3.1.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-jsx-a11y": "^6.1.2",
        "eslint-plugin-prettier": "^3.0.0",
        "eslint-plugin-react": "^7.11.1",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^23.6.0",
        "jest-environment-enzyme": "^7.0.1",
        "jest-enzyme": "^7.0.1",
        "jest-vim-reporter": "0.0.1",
        "live-server": "^1.2.0",
        "node-sass": "^4.10.0",
        "normalize.css": "^8.0.1",
        "onchange": "^5.1.0",
        "prettier": "^1.14.3",
        "react-addons-test-utils": "0.14.7",
        "react-dom": "0.14.7",
        "webpack": "^4.26.0",
        "webpack-cli": "^3.1.2"
    },
    "scripts": {
        "babel": "babel ./src --out-dir ./lib",
        "build": "npm run prettier && npm run babel && npm run lint && npm run jest && npm run pack && npm run sass && npm run copy-images && npm run copy-fonts",
        "clean": "rm -rf ./lib && rm -rf ./public && rm -rf ./coverage && rm -rf .cache",
        "copy-fonts": "mkdir -p ./public/font/ && cp ./asset/font/* ./public/font/",
        "copy-images": "mkdir -p ./public/image/ && cp ./asset/image/* ./public/image/",
        "jest": "jest ./test/*.spec.js --coverage",
        "lint": "eslint --ext .js --ext .jsx ./src test",
        "pack": "webpack --mode development --entry ./src/index.jsx --output ./public/bundle.js",
        "prettier": "prettier --write {./src/**/*,./test/**/*,*}.{js,jsx,json}",
        "rebuild": "npm run clean && npm run build",
        "sass": "node-sass ./src/style/ --output-style compressed --output ./public/style/",
        "serve": "live-server ./public",
        "start": "npm run rebuild && npm run serve",
        "test": "npm run lint && npm run jest",
        "tdd": "onchange -i './test/**/*.js' './src/**/*.js' './src/**/*.jsx' -- npm run build"
    }
}
